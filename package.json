		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"sveltekit-autoimport": "^1.7.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"unified": "^10.1.2",
		"vite": "^4.4.2",
		"vitest": "^0.32.2"
	},
	"type": "module",
