		"@sveltejs/kit": "^1.20.4",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"gray-matter": "^4.0.3",
		"mdsvex": "^0.11.0",
		"open-props": "^1.5.10",
		"postcss": "^8.4.27",
		"postcss-custom-media": "^10.0.0",
		"postcss-jit-props": "^1.0.13",
